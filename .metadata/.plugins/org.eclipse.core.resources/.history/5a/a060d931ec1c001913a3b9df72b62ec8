<script type="text/javascript">
var timeleft = 30;
var progress = 100;
var downloadTimer = setInterval(function(){
	timeleft--;
	progress = (100 * timeleft) / 30;
  	$(".progress-bar").css('width', progress+'%').attr("aria-valuenow", progress);
  	$("#seconds").html(timeleft);
  	if(timeleft <= 0){
    	clearInterval(downloadTimer);
  	}
},1000);
</script>
