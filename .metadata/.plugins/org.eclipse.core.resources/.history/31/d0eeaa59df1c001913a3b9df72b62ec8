<script type="text/javascript">
var timeleft = 30;
var downloadTimer = setInterval(function(){
	timeleft--;
  	$(".progress-bar").attr("aria-valuenow", timeleft);
  	if(timeleft <= 0){
    	clearInterval(downloadTimer);
  	}
},1000);

</script>
